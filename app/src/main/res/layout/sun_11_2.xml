<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scroll3"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#66B2B2B2"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back7"
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/한식"
                android:layout_width="100dp"
                android:layout_height="45dp"
                android:layout_marginLeft="160dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/malgun"
                android:gravity="center"
                android:text="한식"
                android:textColor="#090909"
                android:textSize="34sp"
                android:textStyle="bold" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/계절한정메뉴"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="18dp"
                android:layout_marginTop="5dp"
                android:layout_marginRight="18dp"
                android:layout_weight="1"
                android:text="계절한정메뉴"
                android:textColor="#090909"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/물냉면사진"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="18dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/korean_food_9" />

                <ImageView
                    android:id="@+id/비빔냉면사진"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/korean_food_10" />

                <ImageView
                    android:id="@+id/꼬막비빔밥사진"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/korean_food_11" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/물냉면"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="19dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="물냉면"
                    android:textColor="#090909"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/비빔냉면"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="비빔냉면"
                    android:textColor="#090909"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/꼬막비빔밥"
                    android:layout_width="85dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="꼬막 비빔밥"
                    android:textColor="#090909"
                    android:textSize="20sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/물냉면가격"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="5900원"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/비빔냉면가격"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="5900원"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/꼬막비빔밥가격"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="25dp"
                    android:layout_marginRight="18dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgunbd"
                    android:gravity="center"
                    android:text="6500원"
                    android:textColor="#090909"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="25dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="reduceOrder9"
                    android:text="@string/minus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quantity_view9"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/malgunbd"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="plusOrder9"
                    android:text="@string/plus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="reduceOrder10"
                    android:text="@string/minus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quantity_view10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/malgunbd"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="plusOrder10"
                    android:text="@string/plus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="27dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="reduceOrder11"
                    android:text="@string/minus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/quantity_view11"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/malgunbd"
                    android:text="0"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />

                <Button
                    android:layout_width="40dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="5dp"
                    android:backgroundTint="#00FFFFFF"
                    android:fontFamily="@font/malgunbd"
                    android:onClick="plusOrder11"
                    android:text="@string/plus"
                    android:textColor="#000000"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/left3"
                    android:layout_width="53dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="145dp"
                    android:layout_marginTop="325dp"
                    app:srcCompat="@android:drawable/ic_media_rew" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:fontFamily="@font/malgunbd"
                android:text="총 주문금액  "
                android:textColor="#000000"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/total_price_view"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:fontFamily="@font/malgunbd"
                android:textSize="24sp" />

            <Button
                android:id="@+id/pay2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:background="#66B2B2B2"
                android:fontFamily="@font/malgunbd"
                android:text="결제"
                android:textSize="24sp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>