<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    android:background="#4DB2B2B2" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#66B2B2B2"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/back"
            android:layout_width="53dp"
            android:layout_height="55dp"
            app:srcCompat="?attr/actionModeCloseDrawable" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/koreanfood"
                    android:layout_width="wrap_content"
                    android:layout_height="228dp"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/bibimbap" />

                <ImageView
                    android:id="@+id/bunsik"
                    android:layout_width="wrap_content"
                    android:layout_height="228dp"
                    android:layout_marginTop="90dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/tteokbokki" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/korean_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgun"
                    android:gravity="center"
                    android:text="한식"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/bunsik2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="320dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgun"
                    android:gravity="center"
                    android:text="분식"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/chinesefood"
                    android:layout_width="wrap_content"
                    android:layout_height="228dp"
                    android:layout_marginTop="390dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/dimsum" />

                <ImageView
                    android:id="@+id/westernfood"
                    android:layout_width="wrap_content"
                    android:layout_height="228dp"
                    android:layout_marginTop="390dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/pasta" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/chinese_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="630dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgun"
                    android:gravity="center"
                    android:text="중식"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/western_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="630dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/malgun"
                    android:gravity="center"
                    android:text="양식"
                    android:textSize="34sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>