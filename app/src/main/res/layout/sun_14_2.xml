<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".sun_14_2"
    android:background="#66B2B2B2"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/back13"
                android:layout_width="53dp"
                android:layout_height="45dp"
                android:layout_marginTop="5dp"
                app:srcCompat="?attr/actionModeCloseDrawable" />

            <TextView
                android:id="@+id/mypage2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="115dp"
                android:layout_marginTop="25dp"
                android:fontFamily="@font/malgunbd"
                android:text="마이페이지"
                android:textColor="#000000"
                android:textSize="38dp"
                android:textStyle="bold" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/malgunbd"
        android:text="------------------------------------------------------------------------"
        android:textColor="#000000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/대기번호"
            android:layout_width="180dp"
            android:layout_height="150dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:background="#CCB2B2B2"
            android:fontFamily="@font/malgunbd"
            android:gravity="center|top"
            android:text="대기번호"
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/사용시간"
                android:layout_width="180dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="30dp"
                android:layout_weight="0"
                android:background="#CCB2B2B2"
                android:fontFamily="@font/malgunbd"
                android:gravity="center|top"
                android:text="사용시간"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/countdown_tv"
                android:layout_width="180dp"
                android:layout_height="120dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="0"
                android:background="#CCB2B2B2"
                android:fontFamily="@font/malgunbd"
                android:gravity="center"
                tools:text="00:00"
                android:textColor="#000000"
                android:textSize="48sp" />
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/payment"
            android:layout_width="263dp"
            android:layout_height="90dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#CCB2B2B2"
            android:fontFamily="@font/malgunbd"
            android:gravity="center"
            android:text="자리 위치 확인"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/logout"
            android:onClick="logout"
            android:layout_width="263dp"
            android:layout_height="90dp"
            android:layout_marginLeft="75dp"
            android:layout_marginTop="15dp"
            android:backgroundTint="#CCB2B2B2"
            android:fontFamily="@font/malgunbd"
            android:gravity="center"
            android:text="로그아웃"
            android:textColor="#000000"
            android:textSize="30sp"
            android:textStyle="bold" />
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/enter"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#7CCAB0"
            android:enabled="true"
            android:fontFamily="@font/malgunbd"
            android:text="입장"
            android:textColor="#000000"
            android:textSize="38sp" />

        <Button
            android:id="@+id/exit"
            android:layout_width="150dp"
            android:layout_height="110dp"
            android:layout_marginLeft="225dp"
            android:layout_marginTop="40dp"
            android:backgroundTint="#CD5A5A"
            android:fontFamily="@font/malgunbd"
            android:text="퇴장"
            android:textColor="#000000"
            android:textSize="38sp" />

    </RelativeLayout>

</LinearLayout>